<%= form_for(:user, :url => {:action => 'update_password', :controller=>"users"}) do |f| %>
    <div class="input-field col s12">
      <%= f.password_field :old_password, :class => "validate" %>
      <%= f.label :old_password %>
    </div>
    <div class="input-field col s12">
      <%= f.password_field :password, :class => "validate" %>
      <%= f.label :password %>
    </div>
    <div class="input-field col s12">
      <%= f.password_field :password_confirmation, :class => "validate" %>
      <%= f.label :password_confirmation %>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    </button>
  <% end %>