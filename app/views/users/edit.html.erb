<div class="container">
  <div class="row">
    <%= render 'shared/error_messages' %>
    <%= form_for(:user,url: {action: "update"}, method: "put") do |f| %>
      <div class="input-field">
        <%= f.label :name, class: "active" %>
        <%= f.text_field :name %>
      </div>
      <div class="input-field">
      		<%= f.label :email, class: "active" %>
      		<%= f.text_field :email %>
    	</div>
    	<p><button class="btn waves-effect waves-light" type="submit" name="action">Submit
      </button></p>
    <% end %>
  </div>
</div>
