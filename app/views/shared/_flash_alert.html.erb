<div class="alert">
  <% flash.each do |key, value| %>
    <% if key == "error" %>
      <div class="row">
        <div class="col s12 m12">
          <div class="card-panel teal <%= key %>">
            <span class="white-text"><%= value %></span>
          </div>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col s12 m12">
          <div class="card red lighten-1">
            <div class="card-content white-text">
              <span class="card-title">El registro contiene <%= t(:error, :count => value.count) %>.</span>
              <ul>
                <% value.full_messages.each do |msg| %>
                  <li> <%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>