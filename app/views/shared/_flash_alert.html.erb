
<% flash.each do |key, value| %>
  <% if key != :error %>
    <div class="alert <%= key %>">
      <div class="row">
        <div class="col s12 m12">
          <div class="card-panel teal ">
            <span class="card-title"></span>
            <a href="#"><i class="mdi-navigation-close small close" ></i></a>
            <span class="white-text"><%= value %></span>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert <%= key %>">
      <div class="row">
        <div class="col s12 m12">
          <div class="card red lighten-1">
            <div class="card-content white-text">
              <span class="card-title">El registro contiene <%= t(:error, :count => value.count) %>.</span>
              <a href="#"><i class="mdi-navigation-close small close"></i></a>
              <ul>
                <% value.full_messages.each do |msg| %>
                  <li> <%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
