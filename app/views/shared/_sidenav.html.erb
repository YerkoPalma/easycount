<%if @user.has_companies? %>
  <div class="collection z-depth-1">

    <a href="#!" class="collection-item">
    <div class="row valign-wrapper">
      <div class="col s12">
        <%= image_tag @company.avatar.url, :class => "center-align circle responsive-img", :id => "company-logo" %>        
      </div>
    </div>
    <div class="row valign-wrapper">
      <div class="col s12">
        <h5 class="center-align">Nombre empresa</h5>
      </div>
    </div>
    </a>
    <a href="#!" class="collection-item">Alan<span class="new badge">4</span></a>
    <a href="#!" class="collection-item">Alan</a>
    <a href="#!" class="collection-item">Alan<span class="badge">14</span></a>
  </div>
<% else %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card hoverable">
        <div class="card-content">
          <span class="card-title blue-text text-darken-2">Card Title</span>
          <p>I am a very simple card. I am good at containing small bits of information.
          I am convenient because I require little markup to use effectively.</p>
        </div>
        <div class="card-action">
          <%= link_to "Agregar empresa", new_user_company_path(@current_user), class: "waves-effect waves-light btn white-text", id: "add-company"%>
          <!--<a class="waves-effect waves-light btn white-text" id="add-company">Agregar empresa</a>-->
        </div>
      </div>
    </div>
  </div>
<% end %>
