<% if !@user.nil? %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4 class="">
        The form contains <%= pluralize(@user.errors.count, "error") %>.
      </h4>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% else %>
  <div id="error_explanation" class="bs-callout bs-callout-danger">
    <h4 class="">
      Usuario no ingresado
    </h4>
    <ul>
      <li>Debes ingresar un usuario para iniciar sesi√≥n</li>
    </ul>
  </div>
<% end %>